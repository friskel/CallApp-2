<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <SwitchPreference
        android:defaultValue="true"
        android:key="remindersActive"
        android:summary="Enable the daily repeating notifications.  "
        android:title="Daily Reminders On" />


    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->

    <EditTextPreference
        android:defaultValue="000-000-0000 (Not set!)"
        android:key="myCallNumber"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Call-In Number"
        android:inputType="phone" />

    <EditTextPreference
        android:defaultValue="Has not been set"
        android:key="myColorOrNumber"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Your colors/numbers"
        android:inputType="textCapWords" />


    <EditTextPreference
        android:defaultValue="8"
        android:key="myStartTime"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Morning Start Time"
        android:inputType="time" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="30"
        android:entries="@array/pref_example_list_titles"
        android:entryValues="@array/pref_example_list_values"
        android:key="intervalPref"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Notification Intervals" />

    <EditTextPreference
        android:defaultValue="15"
        android:key="goTestInterval"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Go Test Interval"
        android:inputType="time" />


</PreferenceScreen>