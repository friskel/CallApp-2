    <android.support.v7.preference.SwitchPreferenceCompat
        android:defaultValue="true"
        android:icon="@drawable/ic_favorites"

        android:key="prefsActivate"
        android:summary="When switched on, you will receive the repeating notifications"
        android:title="Activate reminders" />

    <android.support.v7.preference.EditTextPreference
        android:defaultValue="not set!"
        android:dialogLayout="@xml/pref_dialog_edittext_fix"
        android:dialogMessage="The number you need to call to see if you test"
        android:icon="@drawable/ic_favorites"
        android:dialogIcon="@drawable/ic_favorites"
        android:key="prefsCallNumber"
        android:summary=""
        android:title="Your call-in number" />

    <com.probationbuddy.probationbuddy.SettingsNew.TimePreference
        style="@style/AppPreference.DialogPreference"
        android:defaultValue="660"
        android:icon="@drawable/ic_favorites"
        android:dialogIcon="@drawable/ic_favorites"
        android:key="prefStartTime"
        android:summary=""
        android:title="Start time" />



    <android.support.v7.preference.EditTextPreference
        android:defaultValue="not set!"
        android:dialogLayout="@xml/pref_dialog_edittext_fix_text"
        android:dialogMessage="Enter your colors or numbers that would require you to go test"
        android:icon="@drawable/ic_favorites"
        android:dialogIcon="@drawable/ic_favorites"
        android:key="prefsColorNumber"
        android:summary="Blue"
        android:title="Your test colors/numbers" />


