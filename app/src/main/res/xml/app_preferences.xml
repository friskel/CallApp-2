<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.PreferenceCategory
    android:title="Main Settings">

    <android.support.v7.preference.SwitchPreferenceCompat
        android:defaultValue="true"
        android:icon="@drawable/ic_notifications_none_black_24dp"

        android:key="prefsActivate"
        android:summary="When switched on, you will receive the repeating notifications"
        android:title="Activate reminders" />

    <android.support.v7.preference.EditTextPreference
        android:defaultValue="not set"
        android:dialogLayout="@xml/pref_dialog_edittext_fix"
        android:dialogMessage="The number you need to call to see if you test"
        android:icon="@drawable/ic_phone_in_talk_black_24dp"
        android:dialogIcon="@drawable/ic_phone_in_talk_black_24dp"
        android:key="prefsCallNumber"
        android:summary="321-851-4325"
        android:title="Your call-in number" />

    <com.probationbuddy.probationbuddy.SettingsNew.TimePreference
        style="@style/AppPreference.DialogPreference"
        android:defaultValue="90"
        android:icon="@drawable/ic_access_alarm_black_24dp"
        android:dialogIcon="@drawable/ic_access_alarm_black_24dp"
        android:key="prefStartTime"
        android:summary="9:15 am"
        android:title="Start time" />



    <android.support.v7.preference.EditTextPreference
        android:defaultValue="not set!"
        android:dialogLayout="@xml/pref_dialog_edittext_fix_text"
        android:dialogMessage="Enter your colors or numbers that would require you to go test"
        android:icon="@drawable/ic_whatshot_black_24dp"
        android:dialogIcon="@drawable/ic_whatshot_black_24dp"
        android:key="prefsColorNumber"
        android:summary="Blue"
        android:title="Your test colors/numbers" />


    </android.support.v7.preference.PreferenceCategory>


    <android.support.v7.preference.PreferenceCategory
        android:title="Configure Notifications">

        <ListPreference
            android:defaultValue="30"
            android:dialogIcon="@drawable/ic_restore_black_24dp"
            android:entries="@array/intervals_name"
            android:entryValues="@array/intervals_value"
            android:icon="@drawable/ic_restore_black_24dp"
            android:key="prefInterval"
            android:summary="The amount of time between your reminders"
            android:title="Interval between notifications"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null" />

        <android.support.v7.preference.SwitchPreferenceCompat
            android:defaultValue="true"
            android:icon="@drawable/ic_favorites"

            android:key="prefsVibrate"
            android:summary="On/off"
            android:title="Vibrate" />

        <ListPreference
            android:defaultValue="30"
            android:dialogIcon="@drawable/ic_recents"
            android:entries="@array/intervals_name"
            android:entryValues="@array/intervals_value"
            android:icon="@drawable/ic_friends"
            android:key="prefInterval"
            android:summary="beebop"
            android:title="Sound" />


    </android.support.v7.preference.PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>